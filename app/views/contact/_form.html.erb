<%= semantic_form_for @contact,
  url: contact_path, remote: true,
  html: { :class => 'contact-form' } do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
    <% end %>
    <div class="col-sm-5 col-sm-offset-1">
        <div class="form-group">
            <label>Name *</label>
            <input type="text" name="contact[name]" class="form-control" required="required">
        </div>
        <div class="form-group">
            <label>Email *</label>
            <input type="email" name="contact[email]" class="form-control" required="required">
        </div>
        <div class="form-group">
            <label>Phone</label>
            <input type="number" class="form-control" name="contact[phone]">
        </div>
        <div class="form-group">
            <label>Company Name</label>
            <input type="text" class="form-control" name="contact[company]">
        </div>
    </div>
    <div class="col-sm-5">
        <div class="form-group">
            <label>Subject *</label>
            <input type="text" name="contact[subject]" class="form-control" required="required">
        </div>
        <div class="form-group">
            <label>Message *</label>
            <textarea name="contact[message]" id="message" required="required" class="form-control" rows="8"></textarea>
        </div>
        <fieldset class="form-actions">
          <input class="btn btn btn-success" id="contact_submit_action" name="commit" type="submit" value="Send">
          <a class="btn" href="javascript:history.back()" id="contact_cancel_action">Cancel </a>
        </fieldset>
    </div>
<% end %>