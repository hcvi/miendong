<%= semantic_form_for @service,
  url: @service.new_record? ? admin_services_path : admin_service_path(@service),
  remote: true,
  html: { :class => 'form-horizontal' } do |f| %>
  <%= f.semantic_errors %> 
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :sub_service %>
    <%= f.input :description %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, wrapper_html: { class: 'btn btn-success' } %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>