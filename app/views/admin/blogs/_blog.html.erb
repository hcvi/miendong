<tr id="blog-<%= blog.id %>">
  <td>
    <%= blog.title %>
  </td>
  <td>
    <%= link_to 'Edit', edit_admin_blog_path(blog.id),
      class: 'btn btn-success' %>
    <%= link_to 'Delete', admin_blog_path(blog.id), method: :delete,
      remote: true,
      class: 'btn btn-danger',
      data: {confirm: "Are you sure?"} %>
  </td>
</tr>
